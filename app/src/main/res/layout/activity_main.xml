<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Display Area -->
        <EditText
            android:id="@+id/Edit_Text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center|right"
            android:padding="20dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="60sp" />


        <!-- Scientific Panel (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/scientificPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/black">

            <!-- Scientific Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="sin"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnCos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="cos"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnTan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="tan"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnLog"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="log"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnLn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="ln"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />
            </LinearLayout>

            <!-- Scientific Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnPi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="π"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnE"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="e"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnSqrt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="√"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnPower"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="x^y"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnFactorial"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="n!"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />
            </LinearLayout>

            <!-- Scientific Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnOpenBracket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="("
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnCloseBracket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text=")"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnDegRad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="DEG"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnInv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="inv"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnMemory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="M"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />
            </LinearLayout>

            <!-- Scientific Row 4 (NEW) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSinH"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="sinh"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnCosH"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="cosh"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnTanH"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="tanh"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnExp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="exp"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnMod"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="mod"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />
            </LinearLayout>

            <!-- Scientific Row 5 (NEW) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnLog2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="log₂"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnLog10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="log₁₀"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnCubeRoot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="∛"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnSquare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="x²"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnCube"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="x³"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />
            </LinearLayout>
        </LinearLayout>

        <!-- Normal Calculator Buttons -->
        <LinearLayout
            android:id="@+id/normalButtons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@color/black">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="AC"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnPlusMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="+/-"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnPercent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="%"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="/"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9500" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="7"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="8"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="9"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnMultiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="×"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9500" />
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="4"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="5"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="6"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="−"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9500" />
            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="1"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="2"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="3"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="+"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9500" />
            </LinearLayout>

            <!-- Row 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">


                <Button
                    android:id="@+id/btnScientificToggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="SCI"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <!-- 0 Button (now half width) -->
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnDecimal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="."
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#A6A6A6" />

                <Button
                    android:id="@+id/btnEquals"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="="
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9500" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>